<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.behave.behave">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.Register"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        />
        <activity android:name=".ui.ForgotPassword" />
        <activity android:name=".ui.HomeParentActivity" />
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.AddChild" />
        <activity android:name=".ui.ChildTokenSchedule" />
        <activity android:name=".ui.SetUpReward" />
        <activity android:name=".ui.MenuAbout" />
        <activity android:name=".ui.TokenStatus" />
        <activity android:name=".ui.ParentSettings"></activity>
    </application>

</manifest>