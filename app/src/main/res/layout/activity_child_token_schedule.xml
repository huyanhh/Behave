<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_child_token_schedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.behave.behave.ChildTokenSchedule">

    <TextView
        android:text="Set up token schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:id="@+id/textView4"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark" />

    <Spinner
        android:id="@+id/sTokens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignStart="@+id/textView4"
        android:minWidth="100dp"
        android:textAlignment="center"
        android:spinnerMode="dropdown" />

    <TextView
        android:text="every"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:id="@+id/textView17"
        android:layout_below="@+id/textView14"
        android:layout_toStartOf="@+id/textView14"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_alignEnd="@+id/textView14"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:id="@+id/textView14"
        android:layout_marginEnd="13dp"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_below="@+id/textView4"
        android:layout_toStartOf="@+id/sTokens"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="token(s)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/sTokens"
        android:layout_alignEnd="@+id/sTimeUnits"
        android:layout_marginEnd="35dp"
        android:textColor="@android:color/background_dark" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sUnits"
        android:minWidth="100dp"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/textView17"
        android:layout_toStartOf="@+id/sTimeUnits" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sTimeUnits"
        android:minWidth="150dp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/sUnits"
        android:layout_toEndOf="@+id/sTokens"
        android:layout_marginStart="16dp" />

    <Button
        android:text="Ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="61dp"
        android:id="@+id/bSetAutoTokenOK"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView16" />
</RelativeLayout>
