<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_home_children_page"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <TextView
        android:text="Tokens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:id="@+id/textView3" />

    <TextView
        android:text="Good Job!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:textSize="40dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Redeem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_redeem"
        android:onClick="redeemPrize"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="You have"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textSize="32dp"
        android:id="@+id/tvWelcome"
        android:layout_marginStart="22dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="X tokens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tokenAmount"
        android:textSize="32dp"
        android:layout_alignBottom="@+id/tvWelcome"
        android:layout_toEndOf="@+id/tvWelcome"
        android:layout_marginStart="22dp"
        android:layout_alignTop="@+id/tvWelcome" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ww"
        android:id="@+id/imageView2"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="X more token to get PRIZE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/tvWelcome"
        android:layout_centerHorizontal="true" />


</RelativeLayout>