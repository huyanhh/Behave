<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_home_children_page"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <TextView
        android:text="Hello Kid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:id="@+id/textView3" />

    <Button
        android:text="Redeem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_redeem"
        android:onClick="redeemPrize"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />


    <TextView
        android:text="Good Job!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="20sp"
        android:layout_below="@+id/tvWelcome"
        android:layout_alignStart="@+id/button_redeem"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="You have"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvWelcome"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="34dp" />

    <TextView
        android:text="X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tokenAmount"
        android:textSize="20sp"
        android:layout_above="@+id/textView4"
        android:layout_alignEnd="@+id/button_redeem"
        android:layout_marginEnd="25dp" />

    <TextView
        android:text="Tokens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="20sp"
        android:layout_above="@+id/textView4"
        android:layout_toEndOf="@+id/textView3" />

    <Button
        android:id="@+id/listRewardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="list reward"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/button2"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="59dp"
        android:text="Currently Redeeming"
        android:layout_above="@+id/button_redeem"
        android:layout_centerHorizontal="true" />


</RelativeLayout>