<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:weightSum="1">

    <Button
        android:text="Add Child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bParentAddChild"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/bViewRewards"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="14dp"
        android:backgroundTint="#24bfb8"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:text="View Rewards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bViewRewards"
        android:layout_weight="0.75"
        android:layout_alignBaseline="@+id/bParentAddChild"
        android:layout_alignBottom="@+id/bParentAddChild"
        android:layout_alignParentStart="true"
        android:layout_marginStart="56dp"
        android:backgroundTint="#24bfb8"
        style="@style/Widget.AppCompat.Button.Colored" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="296dp"
        android:layout_height="351dp"
        android:layout_above="@+id/bParentAddChild"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lvParentList"
            android:layout_alignTop="@+id/linearLayout4" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvWelcome"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:textSize="24sp" />
    </LinearLayout>
    <!--android:layout_weight="0.75"-->
    <!--android:layout_centerHorizontal="true"-->

</RelativeLayout>